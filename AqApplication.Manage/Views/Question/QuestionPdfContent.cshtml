@using AqApplication.Manage.Utilities;
@model IEnumerable<AqApplication.Entity.Question.QuestionPdfContent>

@Html.Partial("_Breadcrumb", new AqApplication.Manage.Models.CommonBreadcrumbModel
{
    Pagename = "Döküman Listesi",
    Message = (string)TempData["message"],
    isSuccess = (bool?)TempData["success"],
    Backurl = Url.Action("QuestionPdf"),
    Backpagename = "Döküman Listesi"
})


<div class="card mb-3">
    <div class="card-header">
        <i class="glyphicon glyphicon-edit"></i>  Döküman İçerik Listesi
    </div>
    <div class="card-body">

        <table class="table">
            <tr>
                <td colspan="3">
                    @Html.Raw(PaginationHelper.Paginate(this.ViewContext, (AqApplication.Core.Type.Paginition)ViewBag.pagination))
                </td>
            </tr>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Seo)
                </th>
                <th>
                <th>
                    @Html.DisplayNameFor(model => model.FileName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@(item.Seo + 1)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileName)
                    </td>
                    <td>
                        <img src="@item.ImageUrl" width="200" height="250" alt="" />
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
