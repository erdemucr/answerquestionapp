@using AqApplication.Manage.Models;
@using AqApplication.Manage.Utilities;
@model IEnumerable<AnswerQuestionApp.Manage.Models.ChallengeListModel>

@{
    ViewBag.Title = "Challenge List";
}

@Html.Partial("_Breadcrumb", new AqApplication.Manage.Models.CommonBreadcrumbModel
{
    Pagename = "Challenge Listesi",
    Message = (string)TempData["message"],
    isSuccess = (bool?)TempData["success"]
})

<div class="row">
    @Html.Partial("_SearchBar", (SearchModel)ViewBag.searchModel)
    <div class="col-md-9 col-xs-12">
        <div class="card">
            <div class="card-header">
                <i class="glyphicon glyphicon-edit"></i>  Sınav Listesi
            </div>
            <div class="card-body">
                <table class="table table-responsive table-striped table-dar">
                    <tr>
                        <td colspan="10">
                            @Html.Raw(PaginationHelper.Paginate(this.ViewContext, (AqApplication.Core.Type.Paginition)ViewBag.pagination))
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.QuestionCount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AttemptCount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CompletedCount)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.ModifiedDate)
                        </th>
                        <th></th>
                    </tr>

                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>

                        <td>
                            @item.CreatedDate.RegularFullDatetime()
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QuestionCount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AttemptCount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompletedCount)
                        </td>

                        <td>
                            @item.ModifiedDate.RegularFullDatetime()
                        </td>
                        <td>
                            <a href="#" class="btn btn-info">
                                <span class="glyphicon glyphicon-arrow-down"></span> Katılımcılar
                            </a>
                        </td>
                    </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8">Kayıt bulunmadı</td>
                        </tr>
                    }

                </table>

            </div>
        </div>

    </div>

</div>
